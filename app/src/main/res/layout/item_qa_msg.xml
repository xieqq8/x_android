<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/rl_qamsg"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_qamsg_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_qamsg_bread"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignRight="@+id/iv_qamsg_head"
                android:layout_alignTop="@+id/iv_qamsg_head"
                android:layout_marginRight="-3dp"
                android:layout_marginTop="-3dp"
                android:background="@drawable/no_read" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/msg_ask_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/rl_qamsg"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_content_qa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_teacher_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_date_qa"
                    android:singleLine="true"
                    android:text="黄小磊老师"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_date_qa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="2014-04-09 17:40"
                    android:textColor="#AAAAAA"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_content_qa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="2"
                android:paddingTop="3dp"
                android:text="[图片]打发打发dad奋斗奋斗奋斗发发的发发发发发发呆打发打发的发发发地方撒旦法地方的发发呆"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/border_line"
        android:layout_height="0.5dp"></ImageView>
</LinearLayout>