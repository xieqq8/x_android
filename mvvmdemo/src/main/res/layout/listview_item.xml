<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="food"
            type="com.xxx.mvvmdemo.bean.Food" />

        <variable
            name="presenter"
            type="com.xxx.mvvmdemo.view.MoviePresenter"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:onClick="@{food.onItemClick}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="6dp"
            app:img="@{food.img}" />

        <ImageView
            android:id="@+id/iv_Picasso"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="6dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv"
            app:img2="@{food.img}"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_Picasso"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@{food.description}" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_Picasso"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="testTest" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_Picasso"
            android:text="@{food.keywords}"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>